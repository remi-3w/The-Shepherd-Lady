<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
        <script src="https://kit.fontawesome.com/e41c5169c9.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light shadow">
        <div class="container d-flex justify-content-between align-items-right">    
            <img src="images/LogoTSL.png" class="d-inline-block align-text-top"  height="80" alt="logo">
            <div class="ms-3">
            <a class="navbar-brand text-success logo h1 align-self-center" href="index.html">The Shepherd Lady</a>
            <p>Accessoires couture<p>
            </div>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="align-self-center collapse navbar-collapse flex-fill d-lg-flex justify-content-lg-around" id="templatemo_main_nav">
                    <div class="flex-fill ms-5 me-5">
                        <ul class="nav navbar-nav d-flex justify-content-around mx-lg-auto">                      
                            <li class="nav-item">
                                <a class="nav-link" href="#">Blog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path("shop") }}">Shop</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contact</a>
                            </li>
                        </ul>
                    </div>
                    <div class=" navbar align-self-center d-flex justify-content-between ">
                        <div class="d-lg-none flex-sm-fill mt-3 mb-4 col-7 col-sm-auto pr-3">
                            <div class="input-group">
                                <input type="text" class="form-control" id="inputMobileSearch" placeholder="Search ...">
                                <div class="input-group-text">
                                    <i class="fa fa-fw fa-search"></i>
                                </div>
                            </div>
                        </div>
                        <a class="nav-icon d-none d-lg-inline" href="#" data-bs-toggle="modal" data-bs-target="#templatemo_search">
                            <i class="fa fa-fw fa-search text-dark me-3"></i>
                        </a>
                        <a class="nav-icon position-relative text-decoration-none" href="#">
                            <i class="fa fa-fw fa-cart-arrow-down text-dark me-3"></i>
                            <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">7</span>
                        </a>
                        <a class="nav-icon position-relative text-decoration-none" href="#">
                            <i class="fa fa-fw fa-user text-dark me-3"></i>
                            <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">+99</span>
                        </a>
                    </div>
                    <div class="flex-fill ms-5 me-5">
                        <ul class="nav navbar-nav d-flex justify-content-around mx-lg-auto">
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link btn btn-danger" href="{{ path("app_logout") }}">Logout</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                            <a class="nav-link btn btn-success" href="{{  path("security_login" )}}">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-warning  " href="#">S'inscrire</a>
                            </li>
                        {% endif %}                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>




        
        {% block body %}{% endblock %}
    </body>
</html>
